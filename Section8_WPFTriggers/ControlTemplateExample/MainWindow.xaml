<Window x:Class="ControlTemplateExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTemplateExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button x:Name="btnOff" Style="{StaticResource RoundRedButton}" Content="Off" Margin="0,20"  Click="btnOff_Click" >
                <Button.Effect>
                    <DropShadowEffect Direction="270" BlurRadius="15" ShadowDepth="6"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
