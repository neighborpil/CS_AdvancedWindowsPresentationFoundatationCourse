<Window x:Class="CommonDialogExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonDialogExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Height="150">
            <Button x:Name="btnOpenFile" Content="Open File" Click="btnOpenFile_Click" HorizontalAlignment="Center"   Margin="25" Width="75" />
            <Button x:Name="btnColorDialog" Content="Color" Click="btnColor_Click" HorizontalAlignment="Center"  Width="75" />
        </StackPanel>
    </Grid>
</Window>
