<Window x:Class="CommonDialogExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonDialogExample"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <StackPanel Height="150">
            <Button x:Name="OpenFileDialogButton"
                    Content="Open File"
                    Click="OpenFileDialogButton_OnClick"
                    HorizontalAlignment="Center"
                    Margin="25"
                    Width="75" />
            <Button x:Name="ColorDialogButton"
                    Content="Color"
                    Click="ColorDialogButton_OnClick"
                    HorizontalAlignment="Center"
                    Width="75" />
        </StackPanel>
    </Grid>
</Window>
