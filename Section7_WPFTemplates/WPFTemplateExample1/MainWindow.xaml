<Window x:Class="WPFTemplateExample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplateExample1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    <Grid>
        <StackPanel>
            <Button x:Name="OffButton" Style="{StaticResource RoundRedButton}" Content="Off" Margin="0, 20" Click="OffButton_OnClick">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="270" />
                </Button.Effect>
            </Button>

        </StackPanel>
    </Grid>
</Window>
